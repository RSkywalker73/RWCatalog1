    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Numbers category -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_inicio"
        android:id="@+id/framelayout_inicio">
        <TextView
            android:id="@+id/inicio"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Inicio" />
    </FrameLayout>

    <!-- Family category -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_utensilios"
        android:id="@+id/framelayout_utensilios">
        <TextView
            android:id="@+id/utensilios"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Utensilios" />
    </FrameLayout>

    <!-- Colors category -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_complementos"
        android:id="@+id/framelayout_complementos">
        <TextView
            android:id="@+id/complementos"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="Complementos" />
    </FrameLayout>

